	  echo "âŒ Error: START and END dates required"; \
	  echo "Usage: make dataset-gpu START=YYYY-MM-DD END=YYYY-MM-DD"; \
	  exit 1; }
	@env $(SAFE_GPU_ENV) \
	python scripts/pipelines/run_full_dataset.py \
	  --jquants --start-date $(START) --end-date $(END) \
